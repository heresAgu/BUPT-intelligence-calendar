/* pages/index/index.wxss */
.page-container {
  padding: 20rpx;
  min-height: 100vh;
  background-color: #f5f5f5;
}

.calendar-section {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.05);
}

.date-picker {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 2rpx solid #f0f0f0;
  margin-bottom: 20rpx;
}

.date {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.assignments-section {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.05);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.add-btn {
  background: #1890ff;
  color: white;
  border-radius: 20rpx;
  padding: 8rpx 20rpx;
  font-size: 24rpx;
  line-height: 1;
}

.assignment-item {
  background: #fafafa;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  border-left: 6rpx solid #1890ff;
}

.assignment-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.assignment-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  flex: 1;
  margin-right: 20rpx;
}

.priority-badge {
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  color: white;
  font-size: 20rpx;
  min-width: 40rpx;
  text-align: center;
}

.assignment-info {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.assignment-actions {
  display: flex;
  justify-content: flex-end;
}

.complete-btn {
  background: #52c41a;
  color: white;
  border-radius: 16rpx;
  padding: 8rpx 20rpx;
  font-size: 24rpx;
  line-height: 1;
}

.status-done {
  color: #52c41a;
  font-size: 24rpx;
  padding: 8rpx 0;
}

.empty-state {
  text-align: center;
  padding: 60rpx 0;
}

.empty-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
  opacity: 0.6;
}

.empty-text {
  display: block;
  color: #999;
  font-size: 28rpx;
  margin-bottom: 30rpx;
}

.primary-btn {
  background: #1890ff;
  color: white;
  border-radius: 20rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
}

.quick-actions {
  display: flex;
  justify-content: space-around;
  background: white;
  border-radius: 16rpx;
  padding: 30rpx 0;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.05);
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.action-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  margin-bottom: 10rpx;
}

.add-icon {
  background: #1890ff;
  color: white;
}

.scan-icon {
  background: #faad14;
  color: white;
}

.list-icon {
  background: #52c41a;
  color: white;
}
