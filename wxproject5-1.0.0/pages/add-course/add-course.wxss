/* pages/add-course/add-course.wxss */

.add-course-page {
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 头部 */
.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 40rpx;
  background-color: white;
  border-bottom: 1rpx solid #f0f0f0;
}

.nav-back, .nav-save {
  color: #1890ff;
  font-size: 28rpx;
  padding: 10rpx 20rpx;
}

.title {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
}

/* 表单容器 */
.form-container {
  height: calc(100vh - 150rpx);
  padding: 20rpx 30rpx;
}

/* 表单区块 */
.form-section {
  background-color: white;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}

.section-title {
  display: block;
  font-size: 30rpx;
  font-weight: 600;
  color: #1890ff;
  margin-bottom: 30rpx;
  padding-bottom: 15rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

/* 表单项 */
.form-item {
  margin-bottom: 30rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.item-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 15rpx;
}

.item-label.required::after {
  content: '*';
  color: #ff4d4f;
  margin-left: 5rpx;
}

/* 输入框 */
.input {
  width: 100%;
  min-height: 80rpx;
  padding: 20rpx 24rpx;
  border: 2rpx solid #e8e8e8;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #333;
  background-color: white;
  box-sizing: border-box;
}

.input.error {
  border-color: #ff4d4f;
  background-color: #fff2f0;
}

.input:focus {
  border-color: #1890ff;
  outline: none;
}

/* 错误消息 */
.error-msg {
  display: block;
  color: #ff4d4f;
  font-size: 24rpx;
  margin-top: 8rpx;
}

/* 提示文字 */
.hint {
  display: block;
  color: #999;
  font-size: 24rpx;
  margin-top: 8rpx;
}

/* 颜色选项 */
.color-options {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  margin-top: 10rpx;
}

.color-option {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 15rpx 10rpx;
  border-radius: 8rpx;
  border: 2rpx solid #f0f0f0;
  background-color: white;
  transition: all 0.2s;
  flex: 0 0 calc(25% - 20rpx);
  box-sizing: border-box;
}

.color-option.selected {
  border-color: #1890ff;
  background-color: #e6f7ff;
  transform: scale(1.05);
  box-shadow: 0 4rpx 12rpx rgba(24, 144, 255, 0.2);
}

.color-dot {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  margin-bottom: 10rpx;
  border: 2rpx solid rgba(0,0,0,0.1);
}

.color-name {
  font-size: 24rpx;
  color: #666;
}

.color-option.selected .color-name {
  color: #1890ff;
  font-weight: 500;
}

/* 删除区域 */
.delete-section {
  text-align: center;
  padding: 20rpx 0;
}

.btn-delete {
  background-color: #ff4d4f;
  color: white;
  border-radius: 8rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  font-weight: 500;
  border: none;
  width: 100%;
  margin-bottom: 15rpx;
}

.btn-delete:active {
  background-color: #d9363e;
}

.delete-hint {
  display: block;
  color: #999;
  font-size: 24rpx;
  line-height: 1.4;
}