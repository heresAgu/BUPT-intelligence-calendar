/* pages/course-detail/course-detail.wxss */
.course-detail-page {
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 头部 */
.header {
  display: flex;
  align-items: center;
  padding: 30rpx 30rpx 20rpx;
  background-color: white;
  border-bottom: 1rpx solid #f0f0f0;
}

.nav-back {
  color: #1890ff;
  font-size: 28rpx;
  padding: 10rpx 20rpx 10rpx 0;
}

.title {
  flex: 1;
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
  text-align: center;
  margin-right: 60rpx;
}

/* 内容区域 */
.content {
  height: calc(100vh - 150rpx);
  padding: 20rpx 30rpx;
}

/* 课程卡片 */
.course-card {
  display: flex;
  background-color: white;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.08);
  margin-bottom: 30rpx;
  overflow: hidden;
}

.course-color {
  width: 8rpx;
  min-height: 100%;
  flex-shrink: 0;
}

.course-content {
  flex: 1;
  padding: 30rpx;
}

.course-name {
  font-size: 36rpx;
  font-weight: 700;
  color: #333;
  margin-bottom: 30rpx;
  line-height: 1.4;
}

/* 信息区域 */
.info-section {
  margin-bottom: 30rpx;
}

.info-item {
  display: flex;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.info-item:last-child {
  border-bottom: none;
  margin-bottom: 0;
  padding-bottom: 0;
}

.info-label {
  width: 120rpx;
  font-size: 28rpx;
  color: #999;
  font-weight: 500;
}

.info-value {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

/* 统计区域 */
.stats-section {
  background-color: #f9f9f9;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-top: 20rpx;
}

.stats-grid {
  display: flex;
  gap: 20rpx;
}

.stat-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 15rpx 0;
}

.stat-value {
  font-size: 36rpx;
  font-weight: 700;
  color: #333;
  margin-bottom: 5rpx;
}

.stat-value.completed {
  color: #52c41a;
}

.stat-value.pending {
  color: #fa8c16;
}

.stat-label {
  font-size: 24rpx;
  color: #999;
}

/* 作业区域 */
.homework-section {
  background-color: white;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 25rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
}

.section-count {
  font-size: 24rpx;
  color: #999;
  background-color: #f5f5f5;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
}

/* 作业列表 */
.homework-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.homework-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  border-radius: 8rpx;
  background-color: #f9f9f9;
  transition: all 0.2s;
}

.homework-item:active {
  background-color: #f0f0f0;
  transform: translateY(-2rpx);
}

.homework-left {
  margin-right: 20rpx;
}

.status-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
}

.status-dot.completed {
  background-color: #52c41a;
}

.status-dot.pending {
  background-color: #fa8c16;
}

.homework-content {
  flex: 1;
}

.homework-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 10rpx;
  line-height: 1.4;
}

.homework-details {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.detail-item {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #666;
  gap: 5rpx;
}

.detail-icon {
  font-size: 20rpx;
  opacity: 0.8;
}

.status-badge {
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  font-weight: 500;
}

.status-badge.completed {
  background-color: #f6ffed;
  color: #52c41a;
}

.status-badge.pending {
  background-color: #fff7e6;
  color: #fa8c16;
}

.homework-right {
  color: #999;
  font-size: 24rpx;
  margin-left: 10rpx;
}

/* 空状态 */
.empty-homework {
  text-align: center;
  padding: 50rpx 0;
  background-color: white;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
  opacity: 0.3;
}

.empty-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
  font-weight: 500;
}

.empty-desc {
  font-size: 24rpx;
  color: #999;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  gap: 20rpx;
  margin-top: 20rpx;
}

.btn-edit, .btn-delete {
  flex: 1;
  height: 80rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  font-weight: 500;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-edit {
  background-color: #1890ff;
  color: white;
}

.btn-edit:active {
  background-color: #096dd9;
}

.btn-delete {
  background-color: #f5f5f5;
  color: #ff4d4f;
  border: 2rpx solid #ff4d4f;
}

.btn-delete:active {
  background-color: #fff2f0;
  border-color: #d9363e;
  color: #d9363e;
}