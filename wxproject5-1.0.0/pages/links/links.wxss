/* pages/links/links.wxss */
.links-page {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: env(safe-area-inset-bottom);
  box-sizing: border-box;
}

/* 头部 */
.header {
  background: linear-gradient(135deg, #1890ff, #36cfc9);
  color: white;
  padding: 30rpx 20rpx 25rpx;
  border-radius: 0 0 20rpx 20rpx;
  margin-bottom: 15rpx;
}

.title {
  font-size: 36rpx;
  font-weight: 700;
  margin-bottom: 8rpx;
}

.subtitle {
  font-size: 24rpx;
  opacity: 0.9;
}

/* 搜索框 */
.search-section {
  display: flex;
  align-items: center;
  margin: 0 20rpx 15rpx;
  gap: 15rpx;
}

.search-input {
  flex: 1;
  background-color: white;
  border-radius: 50rpx;
  padding: 15rpx 25rpx;
  font-size: 26rpx;
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.08);
}

.search-btn {
  background-color: #1890ff;
  color: white;
  padding: 15rpx 25rpx;
  border-radius: 50rpx;
  font-size: 26rpx;
  font-weight: 500;
  white-space: nowrap;
}

/* 分类标签 */
.category-tabs {
  display: flex;
  padding: 0 0rpx 15rpx;
  gap: 12rpx;
  white-space: nowrap;
  overflow-x: auto;
}

.tab {
  background-color: white;
  padding: 10rpx 20rpx;
  border-radius: 25rpx;
  font-size: 24rpx;
  color: #666;
  border: 1rpx solid #e8e8e8;
  flex-shrink: 0;
}

.tab.active {
  background-color: #1890ff;
  color: white;
  border-color: #1890ff;
}

/* 快捷操作 */
.quick-actions {
  display: flex;
  padding: 0 20rpx 20rpx;
  gap: 12rpx;
}

.action-card {
  flex: 1;
  background-color: white;
  border-radius: 12rpx;
  padding: 20rpx 15rpx;
  text-align: center;
  box-shadow: 0 3rpx 8rpx rgba(0,0,0,0.05);
  transition: all 0.2s;
}

.action-card:active {
  transform: translateY(2rpx);
  box-shadow: 0 1rpx 4rpx rgba(0,0,0,0.1);
}

.action-icon {
  font-size: 40rpx;
  margin-bottom: 8rpx;
  color: #1890ff;
}

.action-text {
  font-size: 22rpx;
  color: #666;
}

/* 链接列表 */
.links-list {
  padding: 0 20rpx 20rpx;
  max-height: 60vh;
}

/* 部分标题 */
.section {
  margin-bottom: 25rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
  padding: 0 5rpx;
}

.section-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex: 1;
  margin-right: 20rpx;
}

.title-text {
  font-size: 30rpx;
  font-weight: 700;
  color: #333;
}

.title-extra {
  font-size: 22rpx;
  color: #999;
  background-color: #f0f0f0;
  padding: 4rpx 10rpx;
  border-radius: 10rpx;
}

/* 一键添加按钮 */
.add-all-btn {
  background-color: #1890ff;
  color: white;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
  white-space: nowrap;
  transition: all 0.3s;
  border: none;
}

.add-all-btn:active {
  background-color: #096dd9;
  transform: scale(0.98);
}

.add-all-btn.adding {
  background-color: #52c41a;
  opacity: 0.8;
}

/* 最近使用链接 */
.recent-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 12rpx;
}

.recent-item {
  background-color: white;
  border-radius: 12rpx;
  padding: 15rpx;
  text-align: center;
  box-shadow: 0 3rpx 8rpx rgba(0,0,0,0.05);
  transition: all 0.2s;
}

.recent-item:active {
  transform: translateY(2rpx);
  box-shadow: 0 1rpx 4rpx rgba(0,0,0,0.1);
}

.recent-icon {
  width: 50rpx;
  height: 50rpx;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  margin: 0 auto 10rpx;
}

.recent-info {
  min-width: 0;
}

.recent-name {
  font-size: 24rpx;
  font-weight: 600;
  color: #333;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-bottom: 4rpx;
}

.recent-desc {
  font-size: 20rpx;
  color: #999;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 链接卡片 */
.link-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 12rpx;
}

.link-card {
  background-color: white;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 3rpx 8rpx rgba(0,0,0,0.05);
  transition: all 0.2s;
}

.link-card:active {
  transform: translateY(2rpx);
  box-shadow: 0 1rpx 4rpx rgba(0,0,0,0.1);
}

.card-header {
  padding: 15rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid rgba(0,0,0,0.05);
}

.card-icon {
  font-size: 36rpx;
}

.card-actions {
  display: flex;
  gap: 8rpx;
}

.btn-star {
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: rgba(0,0,0,0.05);
  color: #ccc;
  font-size: 22rpx;
  transition: all 0.2s;
}

.btn-star.starred {
  background-color: #ffd70020;
  color: #ffd700;
}

.card-content {
  padding: 15rpx;
}

.card-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.card-url {
  font-size: 22rpx;
  color: #666;
  margin-bottom: 12rpx;
  word-break: break-all;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  line-height: 1.3;
}

.card-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 6rpx;
}

.tag {
  background-color: #f0f0f0;
  color: #666;
  font-size: 20rpx;
  padding: 3rpx 8rpx;
  border-radius: 4rpx;
  white-space: nowrap;
}

/* 推荐平台 */
.platform-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 5rpx;
}

.platform-card {
  background-color: white;
  border-radius: 12rpx;
  padding: 20rpx 5rpx;
  text-align: center;
  box-shadow: 0 3rpx 8rpx rgba(0,0,0,0.05);
  transition: all 0.2s;
  position: relative;
}

.platform-card:active {
  transform: translateY(2rpx);
  box-shadow: 0 1rpx 4rpx rgba(0,0,0,0.1);
}

.platform-icon {
  width: 50rpx;
  height: 50rpx;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  margin: 0 auto 10rpx;
}

.platform-name {
  font-size: 24rpx;
  color: #333;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 一键添加按钮 */
.add-btn {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
  background-color: #f0f0f0;
  color: #666;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 18rpx;
  font-weight: bold;
  transition: all 0.2s;
  z-index: 2;
  border: 1rpx solid transparent;
}

.add-btn.added {
  background-color: #52c41a20;
  color: #52c41a;
  border-color: #52c41a;
}

/* 空状态 */
.empty-state {
  background-color: white;
  border-radius: 12rpx;
  padding: 50rpx 20rpx;
  text-align: center;
  box-shadow: 0 3rpx 8rpx rgba(0,0,0,0.05);
}

.empty-icon {
  font-size: 60rpx;
  margin-bottom: 15rpx;
  opacity: 0.3;
}

.empty-title {
  font-size: 30rpx;
  color: #666;
  margin-bottom: 8rpx;
  font-weight: 600;
}

.empty-desc {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 25rpx;
}

.empty-btn {
  background-color: #1890ff;
  color: white;
  border-radius: 50rpx;
  width: 180rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 26rpx;
  margin: 0 auto;
  border: none;
}

/* 模态框样式 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0,0,0,0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  padding: 20rpx;
}

.modal-content {
  background-color: white;
  border-radius: 20rpx;
  width: 100%;
  max-width: 600rpx;
  max-height: 80vh;
  overflow: hidden;
  animation: modalShow 0.3s ease;
}

@keyframes modalShow {
  from {
    opacity: 0;
    transform: translateY(100rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 25rpx 25rpx 15rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.modal-close {
  font-size: 36rpx;
  color: #999;
  width: 45rpx;
  height: 45rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
}

.modal-close:active {
  background-color: #f5f5f5;
}

.modal-body {
  padding: 25rpx;
  max-height: 60vh;
  overflow-y: auto;
}

/* 表单样式 */
.form-item {
  margin-bottom: 25rpx;
}

.form-label {
  font-size: 26rpx;
  color: #333;
  margin-bottom: 8rpx;
  font-weight: 500;
}

.form-input {
  background-color: #f5f5f5;
  border-radius: 8rpx;
  padding: 15rpx;
  font-size: 26rpx;
  color: #333;
}

.picker-input {
  background-color: #f5f5f5;
  border-radius: 8rpx;
  padding: 15rpx;
  font-size: 26rpx;
  color: #333;
}

.icon-options {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-top: 8rpx;
}

.icon-option {
  width: 45rpx;
  height: 45rpx;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 22rpx;
  background-color: #f5f5f5;
  border: 2rpx solid transparent;
  transition: all 0.2s;
}

.icon-option.selected {
  background-color: #e6f7ff;
  border-color: #1890ff;
  transform: scale(1.1);
}

.form-actions {
  display: flex;
  gap: 15rpx;
  margin-top: 30rpx;
}

.btn-cancel, .btn-submit {
  flex: 1;
  height: 70rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
}

.btn-cancel {
  background-color: #f5f5f5;
  color: #666;
}

.btn-submit {
  background-color: #1890ff;
  color: white;
}