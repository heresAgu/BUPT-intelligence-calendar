/* pages/assignment-detail/assignment-detail.wxss */

/* 页面容器 */
.detail-page {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: env(safe-area-inset-bottom);
}

/* 加载状态 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 60vh;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #1890ff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 错误状态 */
.error-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 60vh;
  padding: 40rpx;
  text-align: center;
}

.error-icon {
  font-size: 100rpx;
  margin-bottom: 30rpx;
  opacity: 0.7;
}

.error-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 15rpx;
}

.error-desc {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 40rpx;
  line-height: 1.5;
}

/* 头部卡片 */
.header-card {
  background: linear-gradient(135deg, #1890ff 0%, #52c41a 100%);
  border-radius: 0 0 30rpx 30rpx;
  padding: 40rpx 30rpx 50rpx;
  color: white;
  position: relative;
  overflow: hidden;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(24, 144, 255, 0.2);
}

.header-card::before {
  content: '';
  position: absolute;
  top: 0;
  right: 0;
  width: 200rpx;
  height: 200rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
  transform: translate(30%, -30%);
}

/* 优先级标签 */
.priority-label {
  display: inline-block;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
  margin-bottom: 20rpx;
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(10rpx);
}

.priority-0 { background-color: rgba(82, 196, 26, 0.7); } /* 低 */
.priority-1 { background-color: rgba(250, 173, 20, 0.7); } /* 中 */
.priority-2 { background-color: rgba(255, 77, 79, 0.7); } /* 高 */

/* 标题 */
.title {
  font-size: 40rpx;
  font-weight: 600;
  margin-bottom: 20rpx;
  line-height: 1.4;
  word-break: break-word;
}

/* 状态徽章 */
.status-badge {
  display: inline-block;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(10rpx);
}

.status-0 { background-color: rgba(245, 245, 245, 0.3); } /* 未开始 */
.status-1 { background-color: rgba(230, 247, 255, 0.3); } /* 进行中 */
.status-2 { background-color: rgba(246, 255, 237, 0.3); } /* 已完成 */

/* 信息卡片 */
.info-card {
  background: white;
  border-radius: 20rpx;
  margin: 0 20rpx 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.info-section {
  margin-bottom: 40rpx;
}

.info-section:last-child {
  margin-bottom: 0;
}

.section-title {
  display: block;
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
  padding-bottom: 10rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.info-row {
  display: flex;
  margin-bottom: 15rpx;
  font-size: 28rpx;
  line-height: 1.4;
}

.info-row:last-child {
  margin-bottom: 0;
}

.info-label {
  color: #666;
  min-width: 140rpx;
  flex-shrink: 0;
}

.info-value {
  color: #333;
  font-weight: 500;
  flex: 1;
  word-break: break-word;
}

/* 剩余时间特殊样式 */
.time-left {
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
  font-weight: 600;
}

.time-left.urgent {
  background-color: #fff2f0;
  color: #ff4d4f;
}

.time-left.warning {
  background-color: #fff7e6;
  color: #faad14;
}

.time-left.normal {
  background-color: #f6ffed;
  color: #52c41a;
}

/* 作业描述 */
.description {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  background-color: #fafafa;
  padding: 20rpx;
  border-radius: 10rpx;
  border-left: 4rpx solid #1890ff;
  white-space: pre-wrap;
  word-break: break-word;
}

/* 附件 */
.attachments {
  margin-top: 10rpx;
}

.attachment-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx;
  background-color: #f8f8f8;
  border-radius: 10rpx;
  margin-bottom: 10rpx;
  border: 1rpx solid #f0f0f0;
}

.attachment-name {
  font-size: 26rpx;
  color: #333;
  flex: 1;
  margin-right: 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.btn-download {
  padding: 4rpx 12rpx !important;
  font-size: 22rpx !important;
  min-width: 80rpx;
  background-color: #1890ff !important;
  color: white !important;
}

/* 操作卡片 */
.action-card {
  background: white;
  border-radius: 20rpx;
  margin: 0 20rpx 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.action-buttons {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.btn-action {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 120rpx;
  border-radius: 15rpx;
  border: none;
  font-size: 24rpx;
  font-weight: 500;
  transition: all 0.2s;
}

.btn-action:active {
  transform: scale(0.98);
  opacity: 0.9;
}

.btn-action .icon {
  font-size: 36rpx;
  margin-bottom: 10rpx;
}

.btn-complete {
  background-color: #52c41a !important;
  color: white !important;
}

.btn-undo {
  background-color: #faad14 !important;
  color: white !important;
}

.btn-edit {
  background-color: #1890ff !important;
  color: white !important;
}

.btn-delete {
  background-color: #ff4d4f !important;
  color: white !important;
}

/* 安全区域 */
.safe-area {
  height: env(safe-area-inset-bottom);
}

/* 主按钮 */
.btn-primary {
  background-color: #1890ff;
  color: white;
  border-radius: 15rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  font-weight: 500;
  border: none;
  width: 80%;
  max-width: 400rpx;
}